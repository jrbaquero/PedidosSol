<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    cardCornerRadius="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:paddingBottom="4dp"
    android:paddingEnd="8dp"
    android:paddingStart="8dp"
    android:paddingTop="4dp"
    android:id="@+id/cardViewPedidos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/txt_prioridad"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="00"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:background="@color/colorPestana"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_f_Entrega"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Fecha Entrega"
                android:textSize="18sp"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/txt_hora"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10H00"
                android:gravity="start"/>
        </LinearLayout>

            <TextView
                android:id="@+id/txt_cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cliente" />


            <TextView
                android:id="@+id/txt_descr_rapida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripcion Rapida" />

        </LinearLayout>




    </LinearLayout>
</android.support.v7.widget.CardView>